<% @milestones.each do |milestone| %>
  <div class="well" data-url="<%= url_for(@milestone) %>/<%= milestone.number %>/show">
    <h4 class="media-heading"><%= milestone.title %> <small><span class="glyphicon glyphicon-calendar" aria-hidden="true"></span> Due by <%= milestone.due_on.to_formatted_s(:long_ordinal) %></small></h4>
    <p class="lead">There are a total of <%= milestone.open_issues %> open issues and <%= milestone.closed_issues %> closed issues</p>
  </div>

  <% end %>
