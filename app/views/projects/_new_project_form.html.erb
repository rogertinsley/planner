<!-- Modal -->
<div class="modal fade" id="new-project" tabindex="-1" role="dialog" aria-labelledby="new-project">
  <div class="modal-dialog" role="document">
    <div class="modal-content">

      <!-- Header -->
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">New project</h4>
      </div>

      <%= simple_form_for(Project.new) do |f| %>

        <!-- Body -->
        <div class="modal-body">
          <p>Enter the name of the GitHub repository you want to manage.</p>
          <div class="modal-body">
            <%= f.input :full_name, label: 'Repository', collection: @repositories %>
          </div>
        </div>

        <!--  Footer -->
        <div class="modal-footer">
          <%= f.button :button, "Close", class: 'btn btn-default', :data => { :dismiss => "modal" } %>
          <%= f.submit 'Create', class: 'btn btn-success' %>
        </div>

      <% end %>

    </div>
  </div>
</div>
