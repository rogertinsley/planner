<h1 class="page-header">Select a project to manage</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Project ID</th>
      <th>Name</th>
      <th>Project Lead</th>
      <th></th>
    </tr>
  </thead>
  <tbody>

    <% @projects.each do |project| %>
      <tr>
        <td>
          <%= project.identifier %>
        </td>
        <td>
          <%= project.name %>
        </td>
        <td>
          <%= project.project_lead %>
        </td>
        <td>
        </td>
      </tr>
      <% end %>

  </tbody>
</table>

<div class="pull-right">
  <button type="button" class="btn btn-success" data-toggle="modal" data-target="#new-project">
    <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> New Project
  </button>
</div>

<!-- Modal -->
<div class="modal fade" id="new-project" tabindex="-1" role="dialog" aria-labelledby="new-project">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">New project</h4>
      </div>
      <div class="modal-body">
        <p>Enter the name of the GitHub repository you want to manage.</p>
        <div class="modal-body">
          <div class="form-group">
            <label for="repository">Repository</label>
            <%= select_tag "repository", options_for_select(@repositories) %>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-success">Create</button>
      </div>
    </div>
  </div>
</div>
