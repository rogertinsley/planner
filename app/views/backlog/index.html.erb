<div class="pagehead">
  <%= render partial: 'shared/breadcrumb' %>
  <%= render partial: 'shared/navtabs' %>
</div>

<div class="container">

  <%= render partial: 'shared/flash_message' %>

  <!-- Tab panes -->
  <div class="tab-content">
    <div role="tabpanel" class="tab-pane active" id="backlog">
      <div class="subnav">
        <div class="pull-right">
          <div class="btn-group" role="group">
            <button type="button" class="btn btn-success" data-toggle="modal" data-target="#new-issue-modal">
              <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> New Issue
            </button>
            <button type="button" class="btn btn-info" data-toggle="modal" data-target="#new-milestone-modal">
              <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> New Sprint
            </button>
          </div>
        </div>
      </div>

      <%= render partial: 'issue_table' %>

        <div class="row">
          <div class="pull-left">
            <div class="dropdown">
              <button class="btn btn-primary dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                Add to sprint
                <span class="caret"></span>
              </button>
              <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
                <% @milestones.each do |milestone| %>
                <li><a href="#"><%= milestone.title %></a></li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>

        <%= render partial: 'milestones' %>

    </div>

    <div role="tabpanel" class="tab-pane" id="active-sprint">
      <!-- Content goes here -->
    </div>

    <div role="tabpanel" class="tab-pane" id="reports">
      <!-- Content goes here -->
    </div>
  </div>

</div>

<%= render partial: 'new_issue_form' %>
<%= render partial: 'new_milestone_form' %>
